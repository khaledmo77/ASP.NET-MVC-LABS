
@{
    ViewData["Title"] = "details";
}

<h1>details</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <!-- Profile Image -->
                    <img src="@ViewBag.img" class="rounded-circle img-fluid" alt="User Photo" width="150" height="150" />

                    <h3 class="mt-3">@ViewBag.Username</h3>
                    <p class="text-muted">@ViewBag.Email</p>

                    <div class="mt-2">
                        <span class="badge bg-primary">@ViewBag.Gender</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
